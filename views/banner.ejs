Banner Management Section
<div class="card shadow-sm mb-5">
  <div class="card-header bg-primary text-white">
    Manage Home Page Banner
  </div>
  <div class="card-body">
    <form action="/banner" method="POST" enctype="multipart/form-data" class="row g-3">
      <div class="col-md-6">
        <label class="form-label">Banner Title (Optional)</label>
        <input type="text" name="title" class="form-control" placeholder="Enter banner title">
      </div>
      <div class="col-md-6">
        <label class="form-label">Banner Description (Optional)</label>
        <input type="text" name="description" class="form-control" placeholder="Enter banner description">
      </div>
      <div class="col-md-6">
        <label class="form-label">Main Banner Image</label>
        <input type="file" name="mainBannerImage" class="form-control" accept="image/*" required>
      </div>
      <div class="col-md-6">
        <label class="form-label">Card Banner Image 1</label>
        <input type="file" name="cardBannerImage1" class="form-control" accept="image/*">
      </div>
      <div class="col-md-6">
        <label class="form-label">Card Banner Image 2</label>
        <input type="file" name="cardBannerImage2" class="form-control" accept="image/*">
      </div>
      <div class="col-md-6">
        <label class="form-label">Card Banner Image 3</label>
        <input type="file" name="cardBannerImage3" class="form-control" accept="image/*">
      </div>
      <div class="col-md-6">
        <label class="form-label">Active Status</label>
        <select name="isActive" class="form-select">
          <option value="true">Active</option>
          <option value="false">Inactive</option>
        </select>
      </div>
      <div class="col-12 text-end">
        <button type="submit" class="btn btn-primary">Upload Banner</button>
      </div>
    </form>

    <!-- Current Banner Display -->
    <div class="mt-4">
      <h5>Current Banner</h5>
      <div id="currentBanner">
        <!-- Banner will be loaded here via JavaScript -->
      </div>
    </div>
  </div>
</div>

<script>
  // Load current banner on page load
  document.addEventListener('DOMContentLoaded', function() {
    fetch('/api/getBanner')
      .then(response => response.json())
      .then(data => {
        const bannerDiv = document.getElementById('currentBanner');
        if (data && data.mainBannerImage) {
          bannerDiv.innerHTML = `
            <div class="card">
              <img src="${data.mainBannerImage}" class="card-img-top" alt="Main Banner" style="max-height: 200px; object-fit: cover;">
              <div class="card-body">
                <h6 class="card-title">${data.title || 'No Title'}</h6>
                <p class="card-text">${data.description || 'No Description'}</p>
                <p class="card-text"><small class="text-muted">Status: ${data.isActive ? 'Active' : 'Inactive'}</small></p>
                ${data.cardBannerImage1 ? `<img src="${data.cardBannerImage1}" class="img-thumbnail me-2" alt="Card Banner 1" style="width: 100px; height: 100px; object-fit: cover;">` : ''}
                ${data.cardBannerImage2 ? `<img src="${data.cardBannerImage2}" class="img-thumbnail me-2" alt="Card Banner 2" style="width: 100px; height: 100px; object-fit: cover;">` : ''}
                ${data.cardBannerImage3 ? `<img src="${data.cardBannerImage3}" class="img-thumbnail me-2" alt="Card Banner 3" style="width: 100px; height: 100px; object-fit: cover;">` : ''}
              </div>
            </div>
          `;
        } else {
          bannerDiv.innerHTML = '<p class="text-muted">No banner uploaded yet.</p>';
        }
      })
      .catch(error => {
        console.error('Error loading banner:', error);
        const bannerEl = document.getElementById('currentBanner');
        if (bannerEl) bannerEl.innerHTML = '<p class="text-danger">Error loading banner.</p>';
      });
  });
</script>
